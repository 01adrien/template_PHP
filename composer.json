{
    "name": "adrien/bill_app",
    
    "authors": [
        {
            "name": "01adrien",
            "email": "adrien.go@outlook.fr"
        }
    ],
    "scripts": {
        "serve": "php -S 127.0.0.1:8080 -d display_errors=1 -t public",
        "tests": "./vendor/bin/phpunit ",
        "sniff": "./vendor/bin/phpcs",
        "format": "./vendor/bin/phpcbf",
        "seed:create": "vendor/bin/phinx seed:create $1",
        "seed:run" : "vendor/bin/phinx seed:run",
        "migration:migrate": "vendor/bin/phinx migrate",
        "migration:create" : "vendor/bin/phinx create $1",
        "tailwind:watch": "npx tailwindcss ./tailwind.config.js  -i src/App/assets/css/input.css -o src/App/assets/css/output.css --watch"
    },
    "autoload": {
        "psr-4": {
            "Src\\": "./src/",
            "Tests\\": "./tests/"
        }
    },
    "require": {
        "http-interop/response-sender": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/container": "^2.0",
        "guzzlehttp/psr7": "^2.4",
        "vlucas/phpdotenv": "^5.5",
        "aura/router": "^3.2",
        "twig/twig": "^3.5",
        "php-di/php-di": "^7.0",
        "symfony/twig-bridge": "^6.1",
        "symfony/webpack-encore-bundle": "^1.15",
        "twig/intl-extra": "^3.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "fakerphp/faker": "^1.21",
        "robmorgan/phinx": "^0.11.7",
        "digitalnature/php-ref": "^1.3",
        "phpunit/phpunit": "^10.0"
    },
    "config": {
        "process-timeout": 0
      }
}
